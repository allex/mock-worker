{
  "transpileOnly": true,
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "declaration": true,
    "importHelpers": true,
    "module": "CommonJS",
    "target": "es6",
    "moduleResolution": "node",
    "newLine": "lf",
    "noImplicitAny": false,
    "baseUrl": "./src",
    "outDir": "./dist",
    "strict": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "test"
  ]
}
